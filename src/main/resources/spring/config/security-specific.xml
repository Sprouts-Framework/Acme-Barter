<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd		
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd
    ">
	
	<security:http auto-config="true" use-expressions="true" pattern="/test">
		<!-- TODO: Here you must add the security configuration for your application -->		
	
		<!-- This is an example of how you must add your security configurations -->
		<!-- <security:intercept-url pattern="booking/customer/**" access="hasRole('Customer')" requires-channel="https"/> -->
		
		
		<security:form-login 
			always-use-default-target="true"
			default-target-url="/security/manage-security.do"
			login-page="/home/sign-in.do"
			authentication-failure-url="/home/sign-in.do?showError=true"			 
			username-parameter="username"
			password-parameter="password" />

		<security:logout 
			logout-url="/home/sign-out.do"
			logout-success-url="/security/manage-security-logout.do"
			invalidate-session="true" />
	</security:http>
 	
</beans>