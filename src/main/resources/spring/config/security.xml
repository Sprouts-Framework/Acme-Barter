<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd		
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd
    ">
	
	<import resource="security-specific.xml"/>
	
	<security:http auto-config="true" use-expressions="true"  >
		<security:intercept-url pattern="/signin/**" access="permitAll" />
		<security:intercept-url pattern="/connect/**" access="permitAll" />
		<security:intercept-url pattern="/security/manage-security.do" access="isAuthenticated()" requires-channel="https"/>
		<security:intercept-url pattern="/security/manage-security-logout.do" access="isAnonymous()" requires-channel="http"/>
		<security:intercept-url pattern="/home/user/create.do" access="isAnonymous()" />
		
		<!-- PRORIVISONAL -->
		<security:intercept-url pattern="/barter/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/profile/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/profile/userAccount/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/socialIdentity/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/barter/administrator/**" access="hasRole('Administrator')" requires-channel="https"/>
		<security:intercept-url pattern="/legalText/administrator/**" access="hasRole('Administrator')" requires-channel="https"/>
		<security:intercept-url pattern="/barter/bulletin/user/**" access="hasRole('User')" requires-channel="https"/>
		
		<security:intercept-url pattern="/match/user/**" access="hasRole('User')" requires-channel="https"/>
		
		<security:intercept-url pattern="/folder/administrator/**" access="hasRole('Administrator')" requires-channel="https"/>
		<security:intercept-url pattern="/folder/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/folder/auditor/**" access="hasRole('Auditor')" requires-channel="https"/>
		
		<security:intercept-url pattern="/message/administrator/**" access="hasRole('Administrator')" requires-channel="https"/>
		<security:intercept-url pattern="/message/user/**" access="hasRole('User')" requires-channel="https"/>
		<security:intercept-url pattern="/message/auditor/**" access="hasRole('Auditor')" requires-channel="https"/>
		<security:intercept-url pattern="/match/auditor/**" access="hasRole('Auditor')" requires-channel="https"/>
		<!-- PRORIVISONAL -->
		
		<security:intercept-url pattern="/" access="permitAll" />
		<security:intercept-url pattern="/favicon.ico" access="permitAll" />
		<security:intercept-url pattern="/images/**" access="permitAll" />
		<security:intercept-url pattern="/scripts/**" access="permitAll" />
		<security:intercept-url pattern="/styles/**" access="permitAll" />
		<security:intercept-url pattern="/resources/**" access="permitAll" />
		<security:intercept-url pattern="/template/**" access="permitAll" />
		<security:intercept-url pattern="/home/**" access="permitAll" />				
		<security:intercept-url pattern="/**" access="hasRole('NONE')" />
		 
		<!-- <security:intercept-url pattern="/**" access="permitAll" /> -->
		
		<!-- Dos atributos han sido añadidos, el objetivo es que siempre que alguien entre -->
		<!-- en el sistema, se le redirija a la misma página -->
		<security:form-login 
			always-use-default-target="true"
			default-target-url="/security/manage-security.do"
			login-page="/home/sign-in.do"
			authentication-failure-url="/home/sign-in.do?showError=true"			 
			username-parameter="username"
			password-parameter="password" />

		<security:logout 
			logout-url="/home/sign-out.do"
			logout-success-url="/security/manage-security-logout.do"
			invalidate-session="true" />
			
	</security:http>


</beans>